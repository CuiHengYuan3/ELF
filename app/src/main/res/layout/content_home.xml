<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_home">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/lrcContainer"
    android:visibility="gone"
    >
    <com.example.lenovo.elf.util.LrcView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:id="@+id/LrcView"
        android:background="@color/whilt"

        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal"
    android:id="@+id/myImageContainer"
   android:layout_marginTop="30dp"
    android:visibility="visible"
    >
    <com.example.lenovo.elf.myImageView
        android:id="@+id/SongPic"
        android:layout_width="220dp"
        android:layout_height="220dp"
      android:layout_marginLeft="70dp"
        />
</LinearLayout>

    <!--<android.support.v7.widget.AppCompatSeekBar-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="2dp"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_marginTop="15dp"-->
    <!--android:id="@+id/seekBar"-->
    <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/excit"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_mood_exciting"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/clam"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_mood_clam"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/unhappy"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_mood_unhappy"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/happy"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_mood_happy" />

        </LinearLayout>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="00:00"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:id="@+id/progress"-->
        <!--/>-->
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="00:00"-->
        <!--android:id="@+id/total"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_marginLeft="120dp"-->
        <!--/>-->
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songName"
                android:layout_width="185dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:gravity="center"
               android:layout_marginLeft="0dp"
                />

            <TextView
                android:id="@+id/singer"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_play_pause" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>